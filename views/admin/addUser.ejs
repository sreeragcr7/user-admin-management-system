<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>

  

  <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Users</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">Done</button>
      </div>
    </div>
  </div>

  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item active">New User</li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>UserId</b>
      </div>
    </div>
  
  </div>


  <form id="form" action="/admin/add" method="POST">

    <div class="row form-group mb-4">
        <div class="col">
          <label for="firstName">Name</label>
          <input type="text" class="form-control" id="firstName" name="name" value="" placeholder="Name" required>
          <div id="fnameErr" style="color: red;"></div>
    </div>
    
    <div class="col">
        <label for="email">Email</label>
            <input type="text" class="form-control" id="email" name="email" value="" placeholder="Email" required>
          </div>
    </div>   
    
    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add User</button>
      </div>

  </form> 



  <script>
      
    const form = document.getElementById('form')
    const fname = document.getElementById('firstName')
    const email = document.getElementById('email')
    const fnameErr = document.getElementById('fnameErr')
    
    form.addEventListener('submit', (e) => {
        const ferrMssg = [];
         
         if(fname.value == "" || fname.value == null){
            ferrMssg.push("first name required")
         }
         if(ferrMssg.length > 0) {
           e.preventDefault()
             fnameErr.innerText = ferrMssg.join(", ")
         }else{
          fnameErr.innerText = "";
         }
    })
  
  </script>


</body>
</html>
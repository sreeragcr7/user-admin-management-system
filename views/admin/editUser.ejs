<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= user.name %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
  </div>

  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item active"><%= user.name %></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(user.updatedAt).toUTCString()  %></b>
        <b>UserId:</b> <%= user._id %>
      </div>
    </div>
  
  </div>

  <form action="/admin/edit/<%= user._id %>?_method=PUT" method="POST">
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="firstName">Name</label>
        <input type="text" class="form-control" id="firstName" name="username" value="<%= user.name %>" placeholder="Name" required>
      </div>
  
      <div class="col">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>"  placeholder="Email" required>
      </div>
    </div>
  
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Update User</button>
  
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete User</button>
  
    </div>


    <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <div class="modal-title">You are about to remove a customer record.</div>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p>
                This will remove the customer record of <b class="fw-bold"><%= user.name %></b><br/>
                Are you sure?
              </p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <form action="/admin/delete/<%= user._id %>?_method=DELETE" method="POST" class="position-relative">
                <button type="submit" class="btn btn-primary">Yes, Remove Customer</button>
              </form>
            </div>
          </div>
        </div>
      </div>
  
  </form>